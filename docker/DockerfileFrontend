FROM node

ENV NPM_CONFIG_LOGLEVEL warn
ARG app_env
ENV APP_ENV $app_env

RUN mkdir -p /app
WORKDIR /app
COPY ./app ./

ENV DANGEROUSLY_DISABLE_HOST_CHECK=true

CMD if [ "${APP_ENV}" = "production" ]; \
	then \
	npm install && \
	npm install -g http-server && \
	npm run build && \
	cd build && \
	hs -p 3000; \
	else \
	npm install && \
	npm run start --public; \
	fi

EXPOSE 3000